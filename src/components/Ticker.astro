---
import SkillPill from './SkillPill.astro'
interface Props {
	speed?: number
	reverse?: boolean
	skills: [string, string, string]
}
const { speed = 5, reverse = false, skills } = Astro.props
---

<div class='ticker'>
	<ul
		class='ticker-list'
		style={{
			animationDuration: `${speed}s`,
			animationDirection: reverse ? 'reverse' : 'normal',
		}}
	>
		{
			skills.map(skill => (
				<li class='ticker-item'>
					<SkillPill title={skill} />
				</li>
			))
		}
	</ul>
	<ul
		class='ticker-list'
		style={{
			animationDuration: `${speed}s`,
			animationDirection: reverse ? 'reverse' : 'normal',
		}}
	>
		{
			skills.map(skill => (
				<li class='ticker-item'>
					<SkillPill title={skill} />
				</li>
			))
		}
	</ul>
</div>

<style>
	.ticker {
		width: 100%;

		display: flex;
		flex-direction: row;
		overflow: hidden;
		mask-image: linear-gradient(
			to right,
			rgba(0, 0, 0, 0) 0%,
			rgb(0, 0, 0) 12.5%,
			rgb(0, 0, 0) 87.5%,
			rgba(0, 0, 0, 0) 100%
		);
	}
	.ticker-list {
		white-space: nowrap;
		animation: animate 30s linear infinite;
	}

	.ticker-item {
		display: inline-block;
	}
	@keyframes animate {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-100%);
		}
	}
</style>
