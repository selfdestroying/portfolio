---
import Ticker from './Ticker.astro'
---

<div class='skills-ticker'>
	<Ticker speed={40} skills={['HTML/CSS', 'Responsive Design', 'Rest API']} />
	<Ticker
		speed={35}
		skills={['Soft Skills', 'Version Control/Git', 'Terminal/Command Line']}
	/>
	<Ticker speed={55} skills={['Telegram Bots', 'Databases', 'Web Scraping']} />
</div>

<style>
	.skills-ticker {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
</style>
