---
import Section from './Section.astro'
const container = {
	display: 'flex',
	alignItems: 'center',
	justifyContent: 'flex-start',
	gap: '8px',
}
const section = {
	width: '210px',
}
---

<Section section={section} container={container}>
	<a href='./' class='avatar-link'>
		<div class='avatar-container'>
			<img
				src='https://framerusercontent.com/images/ZI6iesyGEHgzgHiOf2Gdkpy7FJk.jpg?scale-down-to=512'
				alt=''
				class='avatar-image'
				width='68px'
				height='68px'
			/>
		</div>
	</a>
	<div class='profile-info-container'>
		<p class='name'>Leon Dobric</p>
		<p class='role'>Product Designer</p>
	</div>
</Section>

<style>
	.profile-info-container {
		display: flex;
		flex-direction: column;
		gap: 2px;
	}
	.avatar-link {
		border-radius: 24px;
		aspect-ratio: 1/1;
	}
	.avatar-container {
		width: 68px;
		height: 68px;
		border-radius: 24px;
	}
	.avatar-image {
		border-radius: 24px;
		object-position: center;
		object-fit: cover;
	}
	.name {
		font-size: 24px;
		font-weight: 500;
		line-height: 1.2em;
		letter-spacing: 0em;
		color: var(--purple-80);
	}
	.role {
		font-size: 14px;
		font-weight: 300;
		line-height: 1.2em;
		letter-spacing: 0em;
		color: var(--light-60);
	}
</style>
