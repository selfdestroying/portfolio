---
import House from './Icons/House.astro'
interface Props {
	selected?: boolean
	variant?: 'default' | 'link' | 'social'
	text?: string
}
const { selected = false, variant = 'default', text = '' } = Astro.props
const iconSize = variant === 'link' ? 16 : 24
---

<div class=`menu-button ${variant}`>
	<a href='#' class=`menu-button-link ${variant}`>
		<House class:list=`menu-button-icon ${variant}` />
		{selected && <div class='dot' />}
		{variant === 'link' && <p class='menu-button-text'>{text}</p>}
	</a>
</div>

<style>
	.menu-button-icon {
		width: 24px;
		height: 24px;
		@media screen and (max-width: 800px) {
			width: 16px;
			height: 16px;
		}
	}
	.menu-button-icon.social {
		width: 16px;
		height: 16px;
	}
	.menu-button {
		width: 54px;
		height: 54px;
		@media screen and (max-width: 800px) {
			width: 42px;
			height: 42px;
			border-radius: 14px;
		}
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: nowrap;
		background-color: var(--dark-10);
		border-radius: 18px;
	}
	.menu-button.link {
		width: 152px;
		height: 42px;
		padding: 0 13px;
		border-radius: 14px;
	}

	.menu-button.social {
		width: 42px;
		height: 42px;
		border-radius: 14px;
	}

	.menu-button-link {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		flex-wrap: nowrap;
		gap: 8px;
		@media screen and (max-width: 800px) {
			gap: 6px;
		}
		border-radius: 18px;
		color: var(--purple-80);
	}

	.menu-button-link.link {
		justify-content: flex-start;
		flex-direction: row;
		gap: 8px;
	}

	.dot {
		width: 8px;
		height: 2px;
		background-color: var(--purple-80);
		border-radius: 3px;
		@media screen and (max-width: 800px) {
			border-radius: 6px;
		}
	}

	.menu-button-text {
		color: var(--light-90);
		font-size: 16px;
		font-weight: 300;
		line-height: 1.4em;
	}
	.menu-button:hover {
		background: radial-gradient(
			50% 50% at 50% 50%,
			rgb(64, 64, 64) 0%,
			rgb(38, 38, 38) 59.56915632039396%,
			rgb(26, 26, 26) 100%
		);
	}
	.menu-button:hover .menu-button-link {
		color: var(--light-90);
	}
	.menu-button:hover .dot {
		background-color: var(--light-90);
	}
	.menu-button.link:hover {
		background: var(--dark-10);
	}
	.menu-button.link:hover .menu-button-icon {
		color: var(--purple-90);
	}
</style>
